<div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="page-header">
          <h1>My Comment:
            <small>Here you can create a comment</small>
          </h1>
          <% if (typeof(postId) !== 'undefined') { %>
            <h4>ID: <%= postId %></h4>
          <% } %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <form action="/posts/<%= postId%>/comments/" method="POST" enctype="multipart/form-data">
          <div class="form-group <%= typeof error != 'undefined' && error.content ? 'has-error' : '' %>">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-envelope"></i>
              </span>
              <input type="text" value="" name="content" class="form-control" placeholder="Write here the description">
            </div>
            <% if (typeof(error) != 'undefined' && error.content) { %>
              <label class="control-label"> <%= error.content %> </label>
            <% } %>
          </div>
          <div class="form-group <%= typeof error != 'undefined' && error.image_name ? 'has-error' : '' %>">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-envelope"></i>
              </span>
              <input type="text" value="" name="image_name" class="form-control" placeholder="Name of the picture">
            </div>
            <% if (typeof(error) != 'undefined' && error.image_name) { %>
              <label class="control-label"> <%= error.image_name %> </label>
            <% } %>
          </div>
          <div class="form-group <%= typeof error != 'undefined' && error.photo ? 'has-error' : '' %>">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-envelope"></i>
              </span>
              <input type="file" name="photo" class="form-control">
              <!-- <input type="text" value="" name="photo" class="form-control" placeholder="Name of the picture"> -->
            </div>
            <% if (typeof(error) != 'undefined' && error.photo) { %>
              <label class="control-label"> <%= error.photo %> </label>
            <% } %>
          </div>
          <div class="form-actions">
            <button type="submit" class="btn btn-block btn-success">Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>


